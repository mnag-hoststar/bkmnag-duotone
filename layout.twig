<!doctype html>
<html class="no-js" lang="{{ page.seoLang }}">

	<head>
		<meta charset="utf-8" />
		<title>{{ page.title }}</title>
		<meta name="keywords" content="{{ page.keywords }}" />
		<meta name="description" content="{{ page.description }}" />

		{% if site.favicon %}
			<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
			<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
		{% endif %}
		<meta name="viewport" content="width=device-width,initial-scale=1">

		{% include basekit.headScript %}
	</head>

	<body class="{{ page.backgroundClass }}" {{ isV10sSite ? 'id="migrated"' : '' }}>

		<!-- Site Container Start (Required) -->
		{% block content %}
		{% endblock %}
		<!-- Site Container End (Required) -->

		<!-- Footer -->
		<footer class="template__footer">
			<div class="template__footer-container">
				<div class="template__footer-container-left">
					  {{widget('profile', 'footer-profile-left', { 'profileType':'business' })|raw}}
				</div>
				<div class="template__footer-container-right">
					  {{widget('profile', 'footer-profile-right', { 'profileType':'socialicons' })|raw}}
				</div>
			</div>
		</footer>
		
	    {% include basekit.bodyScript %}

		<!-- jQuery -->
		<script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		
		<script src="{{ asset('js/html5shiv.js')}}"></script>
		<script src="{{ asset('js/navigation.js')}}"></script>
		<script src="{{ asset('js/ecommerce-product.js')}}"></script>

		{% block bodyscripts %}
		{% endblock %}
	</body>
</html>